{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "gomod": {
    "packageRules": [
      {
        "matchManagers": [
          "gomod"
        ],
        "matchDepTypes": [
          "indirect"
        ],
        "enabled": true,
        "separateMajorMinor": false,
        "groupName": "all dependencies"
      }
    ]
  },
  "packageRules": [
    {
      "description": "Enable Go version updates in GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchDepNames": ["go"]
    }
  ]
}
