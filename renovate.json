{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "gomod": {
    "packageRules": [
      {
        "matchManagers": [
          "gomod"
        ],
        "matchDepTypes": [
          "indirect"
        ],
        "enabled": true,
        "separateMajorMinor": false,
        "groupName": "all dependencies"
      }
    ]
  },
  "packageRules": [
    {
      "description": "Enable Go version updates in go.mod",
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group Go language version from go.mod",
      "matchDatasources": ["golang-version"],
      "matchDepNames": ["go"],
      "groupName": "Go"
    },
    {
      "description": "Group UBI9 go-toolset Docker image",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ubi9/go-toolset"],
      "groupName": "Go"
    },
    {
      "description": "Group Go version in GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchDepNames": ["go"],
      "groupName": "Go"
    }
  ]
}
